{
    "name": "portrino/shopware-hybridauth",
    "description": "Shopware plugin for social/ oauth2 login",
    "license": "proprietary",
    "type": "shopware-plugin",
    "authors": [
        {
            "name": "Andre Wuttig",
            "email": "wuttig@portrino.de",
            "homepage": "http://www.portrino.de",
            "role": "Developer"
        },
        {
            "name": "Axel Boeswetter",
            "email": "boeswetter@portrino.de",
            "homepage": "http://www.portrino.de",
            "role": "Developer"
        }
    ],
    "require": {
        "composer/installers": "~1.0",
        "hybridauth/hybridauth": "~2.9"
    },
    "extra": {
        "installer-name": "Port1HybridAuth"
    },
    "scripts": {
        "post-autoload-dump": [
            "@enable-additional-providers",
            "@remove-all-other-additional-providers",
            "@remove-open-id-thirdparty",
            "@remove-unused-providers",
            "@remove-live-endpoint"
        ],
        "enable-additional-providers": [
            "[ -d vendor/hybridauth/hybridauth/additional-providers/hybridauth-amazon/Providers ] && cp vendor/hybridauth/hybridauth/additional-providers/hybridauth-amazon/Providers vendor/hybridauth/hybridauth/hybridauth/Hybrid/ -R && echo 'Copy Amazon Provider' || echo 'Skipped...'",
            "[ -d vendor/hybridauth/hybridauth/additional-providers/hybridauth-amazon/thirdparty ] && cp vendor/hybridauth/hybridauth/additional-providers/hybridauth-amazon/thirdparty vendor/hybridauth/hybridauth/hybridauth/Hybrid/ -R && echo 'Copy Amazon OAuth2 Client' || echo 'Skipped...'",
            "[ -d vendor/hybridauth-additional-providers/hybridauth-typo3/Providers ] && cp vendor/hybridauth-additional-providers/hybridauth-typo3/Providers vendor/hybridauth/hybridauth/hybridauth/Hybrid/ -R && echo 'Copy Typo3 Provider' || echo 'Skipped...'",
            "[ -d vendor/hybridauth-additional-providers/hybridauth-typo3/thirdparty ] && cp vendor/hybridauth-additional-providers/hybridauth-typo3/thirdparty vendor/hybridauth/hybridauth/hybridauth/Hybrid/ -R && echo 'Copy Typo3 OAuth2 Client' || echo 'Skipped...'"
        ],
        "remove-all-other-additional-providers": [
            "[ -d vendor/hybridauth/hybridauth/additional-providers ] && rm -rf vendor/hybridauth/hybridauth/additional-providers && echo 'Remove all other additional providers' || echo 'Skipped...'"
        ],
        "remove-open-id-thirdparty": [
            "[ -d vendor/hybridauth/hybridauth/hybridauth/Hybrid/thirdparty/OpenID ] && rm -rf vendor/hybridauth/hybridauth/hybridauth/Hybrid/thirdparty/OpenID && echo 'Remove OpenID' || echo 'Skipped...'"
        ],
        "remove-unused-providers": [
            "[ -f vendor/hybridauth/hybridauth/hybridauth/Hybrid/Providers/AOL.php ] && rm vendor/hybridauth/hybridauth/hybridauth/Hybrid/Providers/AOL.php && echo 'Remove Twitter' || echo 'Skipped...'",
            "[ -f vendor/hybridauth/hybridauth/hybridauth/Hybrid/Providers/Foursquare.php ] && rm vendor/hybridauth/hybridauth/hybridauth/Hybrid/Providers/Foursquare.php && echo 'Remove Foursquare' || echo 'Skipped...'",
            "[ -f vendor/hybridauth/hybridauth/hybridauth/Hybrid/Providers/Live.php ] && rm vendor/hybridauth/hybridauth/hybridauth/Hybrid/Providers/Live.php && echo 'Remove Live' || echo 'Skipped...'",
            "[ -f vendor/hybridauth/hybridauth/hybridauth/Hybrid/Providers/OpenID.php ] && rm vendor/hybridauth/hybridauth/hybridauth/Hybrid/Providers/OpenID.php && echo 'Remove OpenID' || echo 'Skipped...'",
            "[ -f vendor/hybridauth/hybridauth/hybridauth/Hybrid/Providers/Twitter.php ] && rm vendor/hybridauth/hybridauth/hybridauth/Hybrid/Providers/Twitter.php && echo 'Remove Twitter' || echo 'Skipped...'",
            "[ -f vendor/hybridauth/hybridauth/hybridauth/Hybrid/Providers/Yahoo.php ] && rm vendor/hybridauth/hybridauth/hybridauth/Hybrid/Providers/Yahoo.php && echo 'Remove Yahoo' || echo 'Skipped...'"
        ],
        "remove-live-endpoint": [
            "[ -f vendor/hybridauth/hybridauth/hybridauth/live.php ] && rm vendor/hybridauth/hybridauth/hybridauth/live.php && echo 'Remove live endpoint' || echo 'Skipped...'"
        ]
    }
}
